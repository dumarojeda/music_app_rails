<div class="row">
  <div class="col-sm-8">
    <h1><%= @artist.name %></h1>
    <h3>Albums (<%= @artist.albums.count %>)</h3>
    <div class="row">    
      <% @artist.albums.each do |album| %>
        <div class="col-sm-3">
          <div class="album">
            <img src="<%= album.image_url %>" alt="">
            <h4 class="title"><%= album.name %></h4>
            <div class="year"><%= album.released_at.year %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-sm-4">
    <img src="<%= @artist.image_url %>" class="image" />
  </div>
</div>